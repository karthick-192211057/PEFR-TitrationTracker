<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".TreatmentPlanFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/planCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/fieldBackgroundColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/textZoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_status"
                android:textColor="@color/fieldTextColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textPlanMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/wait_for_data"
                android:textColor="@color/fieldTextColor"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Detailed prescription button removed: descriptions now appear inside each medication card -->

    <TextView
        android:id="@+id/textMedicationsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_prescribed_medications"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/planCard"
        app:layout_constraintTop_toBottomOf="@id/planCard" />
    <!-- Doctor prescribed section -->
    <TextView
        android:id="@+id/textDoctorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prescribed By Your Doctor"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/planCard"
        app:layout_constraintTop_toBottomOf="@id/textMedicationsTitle" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewDoctorMedications"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textDoctorTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        tools:listitem="@layout/item_medication" />

    <!-- AI / ML recommended section -->
    <TextView
        android:id="@+id/textAiTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI / ML Recommendations"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/planCard"
        app:layout_constraintTop_toBottomOf="@id/recyclerViewDoctorMedications" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAiMedications"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textAiTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_medication" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNoMedications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_medications_prescribed"
        android:textColor="@color/fieldTextColor"
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/textMedicationsTitle"
        app:layout_constraintStart_toStartOf="@id/planCard" />

</androidx.constraintlayout.widget.ConstraintLayout>
