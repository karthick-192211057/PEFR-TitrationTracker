<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".ReportsFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardExport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/fieldBackgroundColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/export_data_label"
                android:textColor="@color/fieldTextColor"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonExportPDF"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:text="@string/export_as_pdf_button"
                android:backgroundTint="@color/accentColor"
                android:textColor="@color/white"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonExportCSV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:text="@string/export_as_csv_button"
                android:backgroundTint="@color/accentColor"
                android:textColor="@color/white"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSharing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/fieldBackgroundColor"
        app:layout_constraintTop_toBottomOf="@id/cardExport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- doctor info shown when linked -->
            <TextView
                android:id="@+id/textDoctorInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Linked doctor: â€“"
                android:textColor="@color/fieldTextColor"
                android:textSize="14sp"
                android:visibility="gone"
                android:maxLines="2"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/labelRealTimeSharing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/real_time_sharing_label"
                android:textColor="@color/fieldTextColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/labelRealTimeDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Share live patient data with authorized clinicians. Toggle to enable/disable sharing."
                android:textColor="@color/fieldTextColor"
                android:textSize="14sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/toggleSharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:thumbTint="@color/realtime_thumb_tint"
                app:trackTint="@color/realtime_track_tint" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
