<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/textRecTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ML Recommendation"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="8dp"/>

    <TextView
        android:id="@+id/textMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommendation: Oral Steroid"
        android:textSize="16sp"
        android:paddingBottom="6dp"/>

    <TextView
        android:id="@+id/textDays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Days: 10"
        android:textSize="16sp"
        android:paddingBottom="6dp"/>

    <TextView
        android:id="@+id/textProb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cure chance: 41.8%"
        android:textSize="16sp"
        android:paddingBottom="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/buttonRemind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind"/>

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginStart="8dp"
            />

        <Button
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

</LinearLayout>
