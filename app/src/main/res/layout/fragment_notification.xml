<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:paddingTop="12dp">

    <!-- REMINDER CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardReminder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/fieldBackgroundColor"
        app:cardCornerRadius="18dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- HEADER ROW -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textReminderHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Set Reminder"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryDarkColor"/>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textOn="On"
                    android:textOff="Off"
                    app:showText="true"
                    app:thumbTint="@color/reminder_thumb_selector"
                    app:trackTint="@color/reminder_track_selector"/>
            </LinearLayout>

            <!-- STATUS TEXT -->
            <TextView
                android:id="@+id/textReminderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="No reminder set"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <!-- TIME -->
            <TextView
                android:id="@+id/labelTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Time"
                android:textColor="@color/fieldTextColor"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01:05 AM"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingTop="4dp"/>

            <!-- FREQUENCY -->
            <TextView
                android:id="@+id/labelFrequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Frequency"
                android:textColor="@color/fieldTextColor"
                android:textSize="16sp"/>

            <RadioGroup
                android:id="@+id/radioGroupFrequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioDaily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily"/>

                <RadioButton
                    android:id="@+id/radioWeekly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weekly"
                    android:layout_marginStart="14dp"/>

                <RadioButton
                    android:id="@+id/radioMonthly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly"
                    android:layout_marginStart="14dp"/>

            </RadioGroup>

            <!-- TARGET PEFR -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputTargetPEFR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Target PEFR Value">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTextTargetPEFR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="3"
                    android:textColor="@color/black"
                    android:imeOptions="actionDone"
                    android:imeActionLabel="âœ“"
                    android:imeActionId="6"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- PERMISSION WARNING -->
    <TextView
        android:id="@+id/textPermissionWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/redZone"
        android:textSize="14sp"
        android:textStyle="bold"
        android:background="@drawable/rounded_warning_bg"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cardReminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- SAVE BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSave"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="20dp"
        android:text="Save Reminder"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/accentColor"
        app:cornerRadius="16dp"
        app:strokeWidth="0dp"
        app:rippleColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/textPermissionWarning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- NOTIFICATIONS LIST HEADER -->
    <TextView
        android:id="@+id/textNotificationsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/buttonSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/scrollNotifications"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/textNotificationsHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/notificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:paddingBottom="32dp" />

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
