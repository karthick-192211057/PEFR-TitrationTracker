<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- - GRAPH CARD - -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/chartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:backgroundTint="@color/cardLightBackgroundColor"
            android:padding="18dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleGraph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   PEFR Graph"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryDarkColor"
                    android:paddingBottom="12dp" />

                <!-- GRAPH AREA WITH SOFT GRADIENT -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:background="@drawable/bg_graph_container"
                    android:padding="10dp">

                        <com.github.mikephil.charting.charts.LineChart
                            android:id="@+id/lineChart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:id="@+id/emptyChartPlaceholder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:src="@drawable/ic_empty_state"
                                app:tint="@color/accentColor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No PEFR data found"
                                android:textColor="@color/primaryDarkColor"
                                android:layout_marginTop="12dp"
                                android:textSize="16sp" />

                        </LinearLayout>

                </FrameLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- - SYMPTOMS TITLE - -->
        <TextView
            android:id="@+id/labelSymptoms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="Recent Symptoms"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white" />


        <!-- - SYMPTOMS CARD - -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/symptomCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:backgroundTint="@color/fieldBackgroundColor"
            android:padding="16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSymptoms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </com.google.android.material.card.MaterialCardView>


        <!-- - VIEW HISTORY BUTTON - -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonViewHistory"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="36dp"
            android:text="View History"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:cornerRadius="18dp"
            android:backgroundTint="@color/accentColor" />


        <!-- - PROGRESS BAR - -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal" />


        <!-- - NO DATA TEXT - -->
        <TextView
            android:id="@+id/noDataText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No PEFR data available. Record your first PEFR to see the graph."
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            android:gravity="center"
            android:paddingTop="18dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" />

    </LinearLayout>

</ScrollView>
