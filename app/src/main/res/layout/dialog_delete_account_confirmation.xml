<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/primaryColor">

    <!-- Icon (optional) -->
    <ImageView
        android:id="@+id/dialogIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Delete"
        android:src="@drawable/ic_delete"
        android:scaleType="fitCenter"
        app:tint="@color/redZone"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Account"
        android:textColor="@color/primaryDarkColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/dialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your account and all associated data will be permanently deleted. This action cannot be undone."
        android:textColor="@color/fieldTextColor"
        android:textSize="14sp"
        android:layout_marginBottom="20dp" />

    <!-- Deletion Policy Acknowledgement Checkbox -->
    <CheckBox
        android:id="@+id/checkboxAcknowledge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I understand that my account and all data will be permanently deleted"
        android:textColor="@color/fieldTextColor"
        android:textSize="13sp"
        android:layout_marginBottom="24dp"
        android:buttonTint="@color/accentColor" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:spacing="12dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@color/primaryColor"
            android:textAllCaps="false"
            android:textSize="14sp"
            app:cornerRadius="12dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonConfirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Delete Account"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:enabled="false"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/redZone"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>
