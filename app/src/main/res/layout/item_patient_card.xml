<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="12dp"
    android:minHeight="220dp"
    app:cardCornerRadius="22dp"
    app:cardElevation="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- HEADER -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- NAME -->
            <TextView
                android:id="@+id/textPatientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/primaryColor"
                android:text="" />

            <!-- ZONE BADGE -->
            <TextView
                android:id="@+id/textPatientZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="56dp"
                android:gravity="center"
                android:minWidth="80dp"
                android:paddingHorizontal="14dp"
                android:paddingVertical="6dp"
                android:text="Zone: Red"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- DELETE ICON -->
            <ImageView
                android:id="@+id/buttonDeletePatient"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_delete"
                app:tint="@color/redZone"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:contentDescription="Delete Patient"
                android:background="@drawable/bg_delete_circle"
                android:padding="6dp"/>
        </RelativeLayout>


        <!-- DETAILS SECTION -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- PATIENT ID -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_id"
                    app:tint="#626567"/>

                <TextView
                    android:id="@+id/textPatientID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <!-- EMAIL (visible to linked doctors) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="#626567"/>

                <TextView
                    android:id="@+id/textPatientEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <!-- PHONE NUMBER -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_call"
                    app:tint="#626567"/>

                <TextView
                    android:id="@+id/textPatientPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <!-- PEFR -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_lungs"
                    app:tint="#626567"/>

                <TextView
                    android:id="@+id/textLatestPEFR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <!-- SYMPTOM SEVERITY -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_warning"
                    app:tint="@color/redZone"/>

                <TextView
                    android:id="@+id/textSymptomSeverity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#4A4A4A"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <!-- STATUS -->
            <TextView
                android:id="@+id/textPatientStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/yellowZone"
                android:layout_marginTop="10dp"/>
        </LinearLayout>


        <!-- ACTION BUTTONS: Prescribe + History on first row, Download on second row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonPrescribe"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Prescribe"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonHistory"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:text="History"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonDownloadReport"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Download Report"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    app:cornerRadius="12dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
