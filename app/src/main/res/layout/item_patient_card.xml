<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/fieldBackgroundColor"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textPatientName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/fieldTextColor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textPatientZone"
            android:text="John Doe" />

        <TextView
            android:id="@+id/textPatientZone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textPatientName"
            android:text="Green Zone" />

        <TextView
            android:id="@+id/labelLatestPEFR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Latest PEFR:"
            android:textColor="@color/fieldTextColor"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textPatientName" />

        <TextView
            android:id="@+id/textLatestPEFR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/fieldTextColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/labelLatestPEFR"
            app:layout_constraintBaseline_toBaselineOf="@id/labelLatestPEFR"
            android:text="500" />

        <TextView
            android:id="@+id/labelSymptomSeverity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Symptom Severity:"
            android:textColor="@color/fieldTextColor"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelLatestPEFR" />

        <TextView
            android:id="@+id/textSymptomSeverity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/fieldTextColor"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/labelSymptomSeverity"
            app:layout_constraintBaseline_toBaselineOf="@id/labelSymptomSeverity"
            android:text="Low (2/10)" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDownloadReport"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Download Report"
            android:textColor="@color/primaryColor"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textSymptomSeverity"
            app:strokeColor="@color/primaryColor"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonPrescribe"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Prescribe"
            android:textColor="@color/primaryColor"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toStartOf="@id/buttonDownloadReport"
            app:layout_constraintTop_toBottomOf="@id/textSymptomSeverity"
            app:strokeColor="@color/primaryColor"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>