<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <!-- Splash -->
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.pefrtitrationtracker.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeDashboardFragment"
            app:destination="@id/homeDashboardFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_doctorDashboardFragment"
            app:destination="@id/doctorDashboardFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Verify OTP -->
    <fragment
        android:id="@+id/verifyOtpFragment"
        android:name="com.example.pefrtitrationtracker.VerifyOtpFragment"
        android:label="Verify OTP"
        tools:layout="@layout/fragment_verify_otp">
        <argument
            android:name="email"
            app:argType="string" />
        <action
            android:id="@+id/action_verifyOtpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/signupFragment"
            app:popUpToInclusive="true" />
    </fragment>


    <!-- Login -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.pefrtitrationtracker.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeDashboardFragment"
            app:destination="@id/homeDashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_doctorDashboardFragment"
            app:destination="@id/doctorDashboardFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Signup -->
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.pefrtitrationtracker.SignupFragment"
        android:label="Sign Up"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_patientDetailsFragment"
            app:destination="@id/patientDetailsFragment"
            app:popUpTo="@id/signupFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signupFragment_to_verifyOtpFragment"
            app:destination="@id/verifyOtpFragment" />
    </fragment>

    <!-- Forgot Password -->
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.pefrtitrationtracker.ForgotPasswordFragment"
        android:label="Forgot Password"
        tools:layout="@layout/fragment_forgot_password">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/forgotPasswordFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_forgotPasswordFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>

    <!-- Reset Password -->
    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.pefrtitrationtracker.ResetPasswordFragment"
        android:label="Reset Password"
        tools:layout="@layout/fragment_reset_password">
        <argument
            android:name="email"
            app:argType="string" />
        <action
            android:id="@+id/action_resetPasswordFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/resetPasswordFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Patient Registration -->
    <fragment
        android:id="@+id/patientDetailsFragment"
        android:name="com.example.pefrtitrationtracker.PatientDetailsFragment"
        android:label="Patient Details"
        tools:layout="@layout/fragment_patient_details">
        <action
            android:id="@+id/action_patientDetailsFragment_to_homeDashboardFragment"
            app:destination="@id/homeDashboardFragment"
            app:popUpTo="@id/patientDetailsFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Patient Dashboard -->
    <fragment
        android:id="@+id/homeDashboardFragment"
        android:name="com.example.pefrtitrationtracker.HomeDashboardFragment"
        android:label="Home Dashboard"
        tools:layout="@layout/fragment_home_dashboard">

        <action
            android:id="@+id/action_homeDashboardFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_homeDashboardFragment_to_PEFRInputFragment"
            app:destination="@id/PEFRInputFragment" />

        <action
            android:id="@+id/action_homeDashboardFragment_to_graphFragment"
            app:destination="@id/graphFragment">
            <argument
                android:name="patientId"
                app:argType="integer"
                android:defaultValue="-1" />
        </action>

        <action
            android:id="@+id/action_homeDashboardFragment_to_reportsFragment"
            app:destination="@id/reportsFragment" />

        <action
            android:id="@+id/action_homeDashboardFragment_to_symptomTrackerFragment"
            app:destination="@id/symptomTrackerFragment" />

        <action
            android:id="@+id/action_homeDashboardFragment_to_treatmentPlanFragment"
            app:destination="@id/treatmentPlanFragment" />

        <action
            android:id="@+id/action_homeDashboardFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>

    <!-- DOCTOR DASHBOARD (UPDATED FULLY) -->
    <fragment
        android:id="@+id/doctorDashboardFragment"
        android:name="com.example.pefrtitrationtracker.DoctorDashboardFragment"
        android:label="Doctor Dashboard"
        tools:layout="@layout/fragment_doctor_dashboard">

        <!-- Doctor → Profile -->
        <action
            android:id="@+id/action_doctorDashboardFragment_to_doctorProfileFragment"
            app:destination="@id/doctorProfileFragment" />

        <!-- Doctor → Graph -->
        <action
            android:id="@+id/action_doctorDashboardFragment_to_graphFragment"
            app:destination="@id/graphFragment">
            <argument
                android:name="patientId"
                app:argType="integer"
                android:defaultValue="-1" />
        </action>

        <!-- Doctor → Report -->
        <action
            android:id="@+id/action_doctorDashboardFragment_to_doctorReportsFragment"
            app:destination="@id/reportsFragment">
            <argument
                android:name="patientId"
                app:argType="integer" />
        </action>

        <!-- Doctor → History -->
        <action
            android:id="@+id/action_doctorDashboardFragment_to_doctorHistoryFragment"
            app:destination="@id/prescriptionHistoryFragment">
            <argument
                android:name="patientId"
                app:argType="integer" />
        </action>

        <!-- Doctor → Prescribe -->
        <action
            android:id="@+id/action_doctorDashboardFragment_to_prescribeMedicationFragment"
            app:destination="@id/prescribeMedicationFragment">
            <argument
                android:name="patientId"
                app:argType="integer" />
        </action>

    </fragment>


    <!-- Profile -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.pefrtitrationtracker.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Doctor Profile -->
    <fragment
        android:id="@+id/doctorProfileFragment"
        android:name="com.example.pefrtitrationtracker.DoctorProfileFragment"
        android:label="Doctor Profile"
        tools:layout="@layout/fragment_doctor_profile">
        <action
            android:id="@+id/action_doctorProfileFragment_to_editDoctorProfileFragment"
            app:destination="@id/editDoctorProfileFragment" />
        <action
            android:id="@+id/action_doctorProfileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Edit Doctor Profile -->
    <fragment
        android:id="@+id/editDoctorProfileFragment"
        android:name="com.example.pefrtitrationtracker.EditDoctorProfileFragment"
        android:label="Edit Doctor Profile"
        tools:layout="@layout/fragment_edit_doctor_profile" />

    <!-- Record PEFR -->
    <fragment
        android:id="@+id/PEFRInputFragment"
        android:name="com.example.pefrtitrationtracker.PEFRInputFragment"
        android:label="PEFR Input"
        tools:layout="@layout/fragment_pefr_input">
        <action
            android:id="@+id/action_PEFRInputFragment_to_symptomTrackerFragment"
            app:destination="@id/symptomTrackerFragment"
            app:popUpTo="@id/homeDashboardFragment" />
    </fragment>

    <!-- Graph -->
    <fragment
        android:id="@+id/graphFragment"
        android:name="com.example.pefrtitrationtracker.GraphFragment"
        android:label="Graph"
        tools:layout="@layout/fragment_graph">
        <argument
            android:name="patientId"
            app:argType="integer"
            android:defaultValue="-1" />

        <action
            android:id="@+id/action_graphFragment_to_historyListFragment"
            app:destination="@id/historyListFragment">
            <argument
                android:name="patientId"
                app:argType="integer" />
        </action>
    </fragment>

    <!-- Prescription History -->
    <fragment
        android:id="@+id/prescriptionHistoryFragment"
        android:name="com.example.pefrtitrationtracker.PrescriptionHistoryFragment"
        android:label="Prescription History"
        tools:layout="@layout/fragment_prescription_history">
        <argument
            android:name="patientId"
            app:argType="integer" />
    </fragment>

    <!-- Symptom Tracker -->
    <fragment
        android:id="@+id/symptomTrackerFragment"
        android:name="com.example.pefrtitrationtracker.SymptomTrackerFragment"
        android:label="Symptom Tracker"
        tools:layout="@layout/fragment_symptom_tracker" />

    <!-- Treatment Plan -->
    <fragment
        android:id="@+id/treatmentPlanFragment"
        android:name="com.example.pefrtitrationtracker.TreatmentPlanFragment"
        android:label="Treatment Plan"
        tools:layout="@layout/fragment_treatment_plan" />

    <!-- About -->
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.pefrtitrationtracker.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />

    <!-- Reports -->
    <fragment
        android:id="@+id/reportsFragment"
        android:name="com.example.pefrtitrationtracker.ReportsFragment"
        android:label="Reports"
        tools:layout="@layout/fragment_reports">
        <argument
            android:name="patientId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>

    <!-- Notifications -->
    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.pefrtitrationtracker.NotificationFragment"
        android:label="Notification"
        tools:layout="@layout/fragment_notification" />

    <!-- Prescribe -->
    <fragment
        android:id="@+id/prescribeMedicationFragment"
        android:name="com.example.pefrtitrationtracker.PrescribeMedicationFragment"
        android:label="Prescribe Medication"
        tools:layout="@layout/fragment_prescribe_medication">
        <argument
            android:name="patientId"
            app:argType="integer" />
    </fragment>

    <!-- History List -->
    <fragment
        android:id="@+id/historyListFragment"
        android:name="com.example.pefrtitrationtracker.HistoryListFragment"
        android:label="History"
        tools:layout="@layout/fragment_history_list">
        <argument
            android:name="patientId"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>

</navigation>
