<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PEFRTitrationTracker" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/accentColor</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/primaryDarkColor</item>

        <item name="android:windowBackground">@color/primaryColor</item>

        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <item name="android:spinnerItemStyle">@style/Widget.App.SpinnerItem</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:textColorHint">@color/fieldTextColor</item>
    </style>

    <style name="Widget.App.SpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/fieldTextColor</item>
    </style>

    <!-- Circular image shape for profile pictures -->
    <style name="Widget.Shape.CircleImage" parent="Widget.MaterialComponents.ShapeableImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">999dp</item>
    </style>
</resources>
